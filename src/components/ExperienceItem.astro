---
interface Props {
  title: string
  description: string
  date: string
}

const { title, description, date } = Astro.props
---

    <div
    class="absolute w-3 h-3 rounded-full mt-1.5 -start-1.5 border border-gray-900 bg-gray-700"
    >
    </div>
    <time class="mb-1 text-sm font-normal leading-none
     text-blue-800 dark:text-blue-500">
     {date}</time
    >
    <h3 class="text-lg font-semibold mt-2">
    {title}
    </h3>
    <p class="mb-4 text-base font-normal dark:text-gray-400 text-pretty">
    {description}
    </p>
